<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/player_list_video"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/te_zan"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableLeft="@mipmap/details_like_icon"
                android:text="3698"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/te_low"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@mipmap/digdown_video_normal"
                android:text="3698"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/te_s"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@mipmap/download_ad_feed"
                android:text="3698"
                android:textSize="20dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/te_fen"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:drawableLeft="@mipmap/new_share_tabbar_pressed"
            android:focusable="true"

            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>